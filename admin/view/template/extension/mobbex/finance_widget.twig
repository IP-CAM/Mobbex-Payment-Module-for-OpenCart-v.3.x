{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="mobbex_conf" data-toggle="tooltip" title="save" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="cancel" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
    
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Edit Mobbex</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="mobbex_conf" class="form-horizontal">

                    {# Payment Method Status Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ status_label }}</label>
                        <div class="col-sm-10">
                            <select name="module_mobbex_finance_widget_status_widget" id="input-status" class="form-control">
                            {% if module_mobbex_finance_widget_status_widget %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Active on Product #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ active_product_label }}</label>
                        <div class="col-sm-10">
                            <select name="module_mobbex_finance_widget_active_product" id="input-status" class="form-control">
                            {% if module_mobbex_finance_widget_active_product %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Active on Cart #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ active_cart_label }}</label>
                        <div class="col-sm-10">
                            <select name="module_mobbex_finance_widget_active_cart" id="input-status" class="form-control">
                            {% if module_mobbex_finance_widget_active_on_cart %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Button Text #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="module_mobbex_finance_widget_button_text">{{ button_text_label }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="module_mobbex_finance_widget_button_text" name="module_mobbex_finance_widget_button_text" value="{{ module_mobbex_finance_widget_button_text }}" />
                        </div>
                    </div>

                    {# Button Logo #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="module_mobbex_finance_widget_button_logo">{{ button_logo_label }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="module_mobbex_finance_widget_button_logo" name="module_mobbex_finance_widget_button_logo" value="{{ module_mobbex_finance_widget_button_logo }}"/>
                            <p><em>default: https://res.mobbex.com/images/sources/mobbex.png</em></p>
                        </div>
                    </div>

                    {# Button styles #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="module_mobbex_finance_widget_button_styles">{{ button_styles_label }}</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="module_mobbex_finance_widget_button_styles" name="module_mobbex_finance_widget_button_styles">{{module_mobbex_finance_widget_button_styles}}</textarea>
                        </div>
                    </div>

                </form>
                {# Show plugin version #}
                <div class="w-100 text-right" style="">v{{ plugin_version }}</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}