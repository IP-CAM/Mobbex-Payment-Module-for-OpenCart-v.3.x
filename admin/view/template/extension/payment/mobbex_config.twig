{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="mobbex_conf" data-toggle="tooltip" title="save" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="cancel" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
    
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Edit Mobbex</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="mobbex_conf" class="form-horizontal">
                    {# Nav bar #}
                    <ul class="nav nav-tabs">
                        <li class="nav-tab active"><a href="#tab_general" data-toggle="tab">{{ mbbx.tabs.general }}</a></li>
                        <li class="nav-tab"><a href="#tab_order_status" data-toggle="tab">{{ mbbx.tabs.order_status }}</a></li>
                    </ul>

                    {# General Tab #}
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_general">
                            {# Payment Method Status Field #}
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="input-status">{{ mbbx.status_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_status" id="input-status" class="form-control">
                                    {% if mbbx.status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                    </select>
                                </div>
                            </div>

                            {# Test Mode Field #}
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="payment_mobbex_test_mode">{{ mbbx.test_mode_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_test_mode" id="payment_mobbex_test_mode" class="form-control">
                                    {% if mbbx.test_mode %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                    </select>
                                </div>
                            </div>

                            {# API Key Field #}
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="payment_mobbex_api_key">{{ mbbx.api_key_label }}</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="payment_mobbex_api_key" name="payment_mobbex_api_key" value="{{ mbbx.api_key }}" />
                                </div>
                            </div>

                            {# Acess Token Field #}
                            <div class="form-group required">
                                <label class="col-sm-2 control-label" for="payment_mobbex_access_token">{{ mbbx.access_token_label }}</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="payment_mobbex_access_token" name="payment_mobbex_access_token" value="{{ mbbx.access_token }}" />
                                </div>
                            </div>
                        </div>

                        {# Order Status Tab #}
                        <div class="tab-pane" id="tab_order_status">
                            {# Order Status On Sucess Field #}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_mobbex_approved_os">{{ mbbx.approved_os_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_approved_os" id="payment_mobbex_approved_os" class="form-control">
                                    {% for order_status in mbbx.all_order_statuses %}
                                        <option value="{{ order_status.order_status_id }}" {% if mbbx.approved_os == order_status.order_status_id %}selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>

                            {# Order Status On Hold Field #}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_mobbex_onhold_os">{{ mbbx.onhold_os_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_onhold_os" id="payment_mobbex_onhold_os" class="form-control">
                                    {% for order_status in mbbx.all_order_statuses %}
                                        <option value="{{ order_status.order_status_id }}" {% if mbbx.onhold_os == order_status.order_status_id %}selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>

                            {# Order Status On Fail Field #}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_mobbex_failed_os">{{ mbbx.failed_os_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_failed_os" id="payment_mobbex_failed_os" class="form-control">
                                    {% for order_status in mbbx.all_order_statuses %}
                                        <option value="{{ order_status.order_status_id }}" {% if mbbx.failed_os == order_status.order_status_id %}selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>

                            {# Order Status On Reject Field #}
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="payment_mobbex_rejected_os">{{ mbbx.rejected_os_label }}</label>
                                <div class="col-sm-10">
                                    <select name="payment_mobbex_rejected_os" id="payment_mobbex_rejected_os" class="form-control">
                                    {% for order_status in mbbx.all_order_statuses %}
                                        <option value="{{ order_status.order_status_id }}" {% if mbbx.rejected_os == order_status.order_status_id %}selected="selected"{% endif %}>{{ order_status.name }}</option>
                                    {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                {# Show plugin version #}
                <div class="w-100 text-right" style="">v{{ plugin_version }}</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}