{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="mobbex_conf" data-toggle="tooltip" title="save" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="cancel" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {# Database Schema Creation Errors #}
        {% for alert in schema_notices.error %}
            <div class="alert alert-danger">
                <i class="fa fa-exclamation-circle"></i> {{ alert }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endfor %}


        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>Edit Mobbex</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="mobbex_conf" class="form-horizontal">
                    {# Payment Method Status Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ status_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_status" id="input-status" class="form-control">
                            {% if payment_mobbex_status %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Test Mode Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ test_mode_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_test" id="input-status" class="form-control">
                            {% if payment_mobbex_test %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Debug Mode Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ debug_mode_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_debug_mode" id="input-status" class="form-control">
                            {% if payment_mobbex_debug_mode %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# API Key Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="payment_mobbex_api_key">{{ api_key_label }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="payment_mobbex_api_key" name="payment_mobbex_api_key" value="{{ payment_mobbex_api_key }}" />
                        </div>
                    </div>

                    {# Acess Token Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="payment_mobbex_access_token">{{ access_token_label }}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="payment_mobbex_access_token" name="payment_mobbex_access_token" value="{{ payment_mobbex_access_token }}" />
                        </div>
                    </div>

                    {# Embed Mode Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ embed_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_embed" id="input-status" class="form-control">
                            {% if payment_mobbex_embed %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Multicard Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ multicard_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_multicard" id="input-status" class="form-control">
                            {% if payment_mobbex_multicard %}
                                <option value="1" selected="selected">{{ text_enabled }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                    {# Multivendor Field #}
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-status">{{ multivendor_label }}</label>
                        <div class="col-sm-10">
                            <select name="payment_mobbex_multivendor" id="input-status" class="form-control">
                            {% if payment_mobbex_multivendor == 'unified' %}
                                <option value="unified" selected="selected">{{ text_unified }}</option>
                                <option value="active">{{ text_active }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% elseif payment_mobbex_multivendor == 'active' %}
                                <option value="unified">{{ text_unified }}</option>
                                <option value="active" selected="selected">{{ text_active }}</option>
                                <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="unified">{{ text_unified }}</option>
                                <option value="active">{{ text_active }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                            </select>
                        </div>
                    </div>

                </form>
                {# Show plugin version #}
                <div class="w-100 text-right" style="">v{{ plugin_version }}</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}